{
	"name": "gitcherry",
	"displayName": "GitCherry",
	"description": "One-click cherry-picking and pull request creating right in Visual Studio Code",
	"version": "1.0.0-eap.1",
	"publisher": "ksercs",
	"icon": "resources/icon.png",
	"galleryBanner": {
	  "color": "#BB09B2"
	},
	"author": {
		"name" : "Anton Kuznetsov",
		"email" : "ksercs0@gmail.com",
		"url" : "http://github.com/ksercs"
	},
	"contributors": [{
		"name" : "Anton Kuznetsov",
		"email" : "ksercs0@gmail.com",
		"url" : "http://github.com/ksercs"
	}, {
		"name" : "Jaan Toming",
		"url" : "http://github.com/jtoming830"
	}],
	"repository": {
		"type": "git",
		"url": "https://github.com/ksercs/GitCherry.git"
	},
	"bugs": {
		"url": "https://github.com/ksercs/GitCherry/issues",
		"email": "ksercs0@gmail.com"
	},
	"homepage": "https://github.com/ksercs/GitCherry/blob/master/README.md",
	"keywords": ["git", "cherry", "pull request", "cherry-pick", "pull-request"],
	"preview": true,
	"engines": {
		"vscode": "^1.50.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:main"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "GitCherry",
					"title": "GitCherry",
					"icon": "resources/dark/cherry.svg"
				}
			]
		},
		"views": {
			"GitCherry": [
				{
					"id": "main",
					"name": "main",
					"icon": "resources/dark/cherry.svg"
				}
			]
		},
		"commands": [
			{
				"command": "pull_request",
				"title": "Create pull requests",
				"icon": {
					"light": "resources/light/start.svg",
					"dark": "resources/dark/start.svg"
				}
			},
			{
				"command": "refresh",
				"title": "Refresh",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "continue",
				"title": "Continue cherry-picking",
				"icon": {
					"light": "resources/light/continue.svg",
					"dark": "resources/dark/continue.svg"
				}
			},
			{
				"command": "cherry_pick",
				"title": "Cherry-pick",
				"icon": {
					"light": "resources/light/cherry.svg",
					"dark": "resources/dark/cherry.svg"
				}
			},
			{
				"command": "abort_cherry_pick",
				"title": "Abort cherry-picking",
				"icon": {
					"light": "resources/light/abort.svg",
					"dark": "resources/dark/abort.svg"
				}
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "pull_request",
					"group": "navigation",
					"when": "view == main"
				},
				{
					"command": "refresh",
					"group": "navigation",
					"when": "view == main"
				},
				{
					"command": "continue",
					"group": "navigation",
					"when": "view == main && isMergeConflict == true"
				},
				{
					"command": "abort_cherry_pick",
					"group": "navigation",
					"when": "view == main && isMergeConflict == true"
				},
				{
					"command": "cherry_pick",
					"group": "navigation",
					"when": "view == main && isMergeConflict == false"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts --fix",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/vscode": "^1.50.0",
		"@typescript-eslint/eslint-plugin": "^4.8.2",
		"@typescript-eslint/parser": "^4.8.2",
		"eslint": "^7.14.0",
		"eslint-config-airbnb-base": "^14.2.1",
		"eslint-config-standard": "^16.0.2",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-promise": "^4.2.1",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	},
	"dependencies": {
		"@octokit/rest": "^18.0.9",
		"@octokit/types": "^5.5.0",
		"axios": "^0.21.0",
		"dotenv": "^8.2.0",
		"simple-git": "^2.31.0"
	}
}
